<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySaveInterface.ViewModels"
        xmlns:model="using:EasySave.Model"
        xmlns:converters="using:EasySaveInterface.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="550"
        x:Class="EasySaveInterface.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="EasySave">

    <Window.Resources>
        <converters:ItemIndexConverter x:Key="ItemIndexConverter" />
        <converters:BackupTypeConverter x:Key="BackupTypeConverter" />
    </Window.Resources>

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid RowDefinitions="Auto,*,Auto" Margin="0">

		<!-- Header -->
		<Border Grid.Row="0" Background="#252526" Padding="20,15">
			<Grid ColumnDefinitions="*,Auto,Auto">
				<TextBlock Grid.Column="0"
                          Text="{Binding TextMenuTitle}"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#FFFFFF"
                          VerticalAlignment="Center"/>

				<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" Margin="0,0,20,0">
					<TextBlock Text="{Binding TextLabelLanguage}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
					<ComboBox ItemsSource="{Binding Languages}"
                             SelectedItem="{Binding SelectedLanguage}"
                             Width="120"/>
				</StackPanel>

				<StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
					<TextBlock Text="{Binding TextLabelLogFormat}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
					<ComboBox ItemsSource="{Binding LogFormats}"
                             SelectedItem="{Binding SelectedLogFormat}"
                             Width="100"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Content -->
		<Grid Grid.Row="1" ColumnDefinitions="270,*" Margin="0">

			<!-- Left sidebar: menu -->
			<Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
				<ScrollViewer>
					<StackPanel Margin="10">
						<TextBlock Text="{Binding TextMenuLabel}"
							   FontSize="12"
							   FontWeight="Bold"
							   Foreground="#CCCCCC"
							   Margin="5,10,5,15"/>

						<Button Classes="menu-button" Command="{Binding GoToCreateCommand}">
							<TextBlock Text="{Binding TextCreateBackup}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToExecuteJobCommand}">
							<TextBlock Text="{Binding TextExecuteBackup}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToExecuteAllCommand}">
							<TextBlock Text="{Binding TextExecuteAll}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToExecuteRangeCommand}">
							<TextBlock Text="{Binding TextExecuteRange}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToExecuteSelectionCommand}">
							<TextBlock Text="{Binding TextExecuteSpecific}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToDeleteCommand}">
							<TextBlock Text="{Binding TextDeleteJobs}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToListJobsCommand}">
							<TextBlock Text="{Binding TextListJobs}" TextWrapping="Wrap"/>
						</Button>

						<Button Classes="menu-button" Command="{Binding GoToSettingsCommand}">
							<TextBlock Text="{Binding TextSettings}" TextWrapping="Wrap"/>
						</Button>
						
					</StackPanel>
				</ScrollViewer>
			</Border>

			<!-- Right panel: pages -->
			<ScrollViewer Grid.Column="1">
				<StackPanel Margin="30,20" Spacing="15">

					<!-- ========== PAGE: Create ========== -->
					<StackPanel IsVisible="{Binding IsCreatePage}" Spacing="15">
						<TextBlock Text="{Binding TextCreateBackup}"
							   FontWeight="Bold"
							   FontSize="22"
							   Foreground="#FFFFFF"
							   Margin="0,0,0,10"/>

						<Border Background="#2D2D30" CornerRadius="6" Padding="20" BorderBrush="#3F3F46" BorderThickness="1">
							<StackPanel Spacing="15">
								<StackPanel>
									<TextBlock Text="{Binding TextPromptName}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
									<TextBox Watermark="Ex: Backup_Documents"
										 Text="{Binding NewJobName}"
										 Height="36"/>
								</StackPanel>

								<StackPanel>
									<TextBlock Text="{Binding TextPromptSource}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
									<Grid ColumnDefinitions="*,Auto">
										<TextBox Grid.Column="0"
											Watermark="Ex: C:\Users\Documents"
											 Text="{Binding NewJobSource}"
											 Height="36"/>
										<Button Grid.Column="1"
												Content="Parcourir"
												Click="SelectFolder"
												Tag= "source"
												Classes="browse"
												Height="36"
												Padding="15,0"
												Margin="8,0,0,0"
												VerticalContentAlignment="Center"
												HorizontalContentAlignment="Center"/>
									</Grid>
								</StackPanel>

								<StackPanel>
									<TextBlock Text="{Binding TextPromptTarget}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
									<Grid ColumnDefinitions="*,Auto">
										<TextBox  Grid.Column="0"
											Watermark="Ex: D:\Backups\Documents"
											 Text="{Binding NewJobTarget}"
											 Height="36"/>
										<Button Grid.Column="1"
												Content="Parcourir"
												Click="SelectFolder"
												Tag="target"
												Classes="browse"
												Height="36"
												Padding="15,0"
												Margin="8,0,0,0"
												VerticalContentAlignment="Center"
												HorizontalContentAlignment="Center"/>
									</Grid>
								</StackPanel>

								<StackPanel>
									<TextBlock Text="{Binding TextPromptType}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
									<ComboBox ItemsSource="{Binding BackupTypeNames}"
									  SelectedIndex="{Binding NewJobTypeIndex}"
									  Height="36"
									  HorizontalAlignment="Stretch"/>
								</StackPanel>

								<Button Content="{Binding TextCreateBackup}"
										Classes="primary"
										Command="{Binding CreateJobCommand}"
										HorizontalAlignment="Left"
										Margin="0,10,0,0"/>
							</StackPanel>
						</Border>
					</StackPanel>



					<!-- ========== PAGE: Execute Job ========== -->
					<StackPanel IsVisible="{Binding IsExecuteJobPage}" Spacing="15">
						<TextBlock Text="{Binding TextExecuteBackup}"
                                   FontWeight="Bold"
                                   FontSize="22"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,10"/>

						<TextBlock Text="{Binding TextSelectJobExecute}" Foreground="#CCCCCC" FontSize="13"/>

						<Border Background="#2D2D30" CornerRadius="6" Padding="15" BorderBrush="#3F3F46" BorderThickness="1" MaxHeight="350">
							<ScrollViewer>
								<ItemsControl ItemsSource="{Binding Jobs}" Margin="0,0,15,0">
									<ItemsControl.ItemTemplate>
										<DataTemplate x:DataType="model:BackupJob">
											<Grid ColumnDefinitions="*,Auto" Margin="0,5">
												<StackPanel Grid.Column="0" Spacing="5">
													<StackPanel Orientation="Horizontal" Spacing="10">
														<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
														<Border Background="#007ACC" CornerRadius="3" Padding="5,2">
															<TextBlock Text="{Binding Type, Converter={StaticResource BackupTypeConverter}}" FontSize="10" Foreground="White"/>
														</Border>
													</StackPanel>
													<StackPanel Orientation="Horizontal" Spacing="4">
														<TextBlock Text="{Binding $parent[Window].DataContext.TextLabelSource}" Foreground="#888888" FontSize="11"/>
														<TextBlock Text="{Binding SourceDir}" Foreground="#888888" FontSize="11"/>
													</StackPanel>
													<StackPanel Orientation="Horizontal" Spacing="4">
														<TextBlock Text="{Binding $parent[Window].DataContext.TextLabelTarget}" Foreground="#888888" FontSize="11"/>
														<TextBlock Text="{Binding TargetDir}" Foreground="#888888" FontSize="11"/>
													</StackPanel>
													<Grid ColumnDefinitions="*,Auto" Margin="0,2,10,0">
														<ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding Progress}" Height="14" Foreground="#007ACC" CornerRadius="3"/>
														<TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
													</Grid>
												</StackPanel>
												<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
													<Button Content="&#9654;" Background="#2EA043" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
															Command="{Binding $parent[Window].DataContext.PlayJobCommand}"
															CommandParameter="{Binding}"/>
													<Button Content="&#10074;&#10074;" Background="#D29922" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
															Command="{Binding $parent[Window].DataContext.PauseJobCommand}"
															CommandParameter="{Binding}"/>
													<Button Content="&#9632;" Background="#D13438" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
																Command="{Binding $parent[Window].DataContext.StopJobCommand}"
																CommandParameter="{Binding}"/>
												</StackPanel>
											</Grid>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</ScrollViewer>
						</Border>
					</StackPanel>

					<!-- ========== PAGE: Execute All ========== -->
					<StackPanel IsVisible="{Binding IsExecuteAllPage}" Spacing="15">
                        <TextBlock Text="{Binding TextExecuteAll}"
                                   FontWeight="Bold"
                                   FontSize="22"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,10"/>

					<StackPanel Orientation="Horizontal" Spacing="8">
						<Button Content="&#9654;" Background="#2EA043" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
								Command="{Binding PlayAllJobsCommand}"/>
						<Button Content="&#10074;&#10074;" Background="#D29922" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
								Command="{Binding PauseAllJobsCommand}"/>
						<Button Content="&#9632;" Background="#D13438" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
								Command="{Binding StopAllJobsCommand}"/>
					</StackPanel>

					<Border Background="#2D2D30" CornerRadius="6" Padding="15" BorderBrush="#3F3F46" BorderThickness="1" MaxHeight="350">
						<ScrollViewer>
							<ItemsControl ItemsSource="{Binding Jobs}" Margin="0,0,15,0">
								<ItemsControl.ItemTemplate>
									<DataTemplate x:DataType="model:BackupJob">
										<StackPanel Spacing="5" Margin="0,5">
											<StackPanel Orientation="Horizontal" Spacing="10">
												<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
												<Border Background="#007ACC" CornerRadius="3" Padding="5,2">
													<TextBlock Text="{Binding Type, Converter={StaticResource BackupTypeConverter}}" FontSize="10" Foreground="White"/>
												</Border>
											</StackPanel>
											<StackPanel Orientation="Horizontal" Spacing="4">
												<TextBlock Text="{Binding $parent[Window].DataContext.TextLabelSource}" Foreground="#888888" FontSize="11"/>
												<TextBlock Text="{Binding SourceDir}" Foreground="#888888" FontSize="11"/>
											</StackPanel>
											<StackPanel Orientation="Horizontal" Spacing="4">
												<TextBlock Text="{Binding $parent[Window].DataContext.TextLabelTarget}" Foreground="#888888" FontSize="11"/>
												<TextBlock Text="{Binding TargetDir}" Foreground="#888888" FontSize="11"/>
											</StackPanel>
											<Grid ColumnDefinitions="*,Auto" Margin="0,2,10,0">
												<ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding Progress}" Height="14" Foreground="#007ACC" CornerRadius="3"/>
												<TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
											</Grid>
										</StackPanel>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</ScrollViewer>
					</Border>

					<Border Background="#2D2D30" CornerRadius="6" Padding="12" BorderBrush="#3F3F46" BorderThickness="1">
						<StackPanel Spacing="6">
							<TextBlock Text="{Binding TextGlobalProgress}" Foreground="#CCCCCC" FontSize="12"/>
							<Grid ColumnDefinitions="*,Auto">
								<ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding GlobalProgress}" Height="14" Foreground="#4EC9B0" CornerRadius="3"/>
								<TextBlock Grid.Column="1" Text="{Binding GlobalProgress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
							</Grid>
						</StackPanel>
					</Border>
				</StackPanel>

					<!-- ========== PAGE: Execute Range ========== -->
					<StackPanel IsVisible="{Binding IsExecuteRangePage}" Spacing="15">
                        <TextBlock Text="{Binding TextExecuteRange}"
                                   FontWeight="Bold"
                                   FontSize="22"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding TextJobsAvailable}" Foreground="#CCCCCC" FontSize="13"/>

                        <Border Background="#2D2D30" CornerRadius="6" Padding="15" BorderBrush="#3F3F46" BorderThickness="1" MaxHeight="250">
                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding Jobs}" Margin="0,0,15,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="model:BackupJob">
                                            <StackPanel Spacing="4" Margin="0,5">
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <TextBlock Foreground="#007ACC" FontWeight="Bold" Width="30">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource ItemIndexConverter}">
                                                                <Binding Path="ItemsSource" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                                                <Binding />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                    <Border Background="#007ACC" CornerRadius="3" Padding="5,2">
                                                        <TextBlock Text="{Binding Type, Converter={StaticResource BackupTypeConverter}}" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </StackPanel>
                                                <Grid ColumnDefinitions="*,Auto" Margin="35,2,10,0">
                                                    <ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding Progress}" Height="14" Foreground="#007ACC" CornerRadius="3"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <StackPanel Spacing="8">
                            <TextBlock Text="{Binding TextEnterNumbersSemicolon}"
                                       Foreground="#CCCCCC"
                                       FontSize="12"/>
                            <TextBox Watermark="Ex: 1;3"
                                     Text="{Binding SelectedIndicesText}"
                                     Width="250"
                                     Height="36"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="&#9654;" Background="#2EA043" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
                                    Command="{Binding PlayRangeJobsCommand}"/>
                            <Button Content="&#10074;&#10074;" Background="#D29922" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
                                    Command="{Binding PauseAllJobsCommand}"/>
                            <Button Content="&#9632;" Background="#D13438" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
                                    Command="{Binding StopAllJobsCommand}"/>
                        </StackPanel>

                        <Border Background="#2D2D30" CornerRadius="6" Padding="12" BorderBrush="#3F3F46" BorderThickness="1">
                            <StackPanel Spacing="6">
                                <TextBlock Text="{Binding TextGlobalProgress}" Foreground="#CCCCCC" FontSize="12"/>
                                <Grid ColumnDefinitions="*,Auto">
                                    <ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding GlobalProgress}" Height="14" Foreground="#4EC9B0" CornerRadius="3"/>
                                    <TextBlock Grid.Column="1" Text="{Binding GlobalProgress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

					<!-- ========== PAGE: Execute Selection ========== -->
					<StackPanel IsVisible="{Binding IsExecuteSelectionPage}" Spacing="15">
						<TextBlock Text="{Binding TextExecuteSpecific}"
								   FontWeight="Bold"
								   FontSize="22"
								   Foreground="#FFFFFF"
								   Margin="0,0,0,10"/>

						<TextBlock Text="{Binding TextJobsAvailable}" Foreground="#CCCCCC" FontSize="13"/>

						<Border Background="#2D2D30" CornerRadius="6" Padding="15" BorderBrush="#3F3F46" BorderThickness="1" MaxHeight="250">
							<ScrollViewer>
								<ItemsControl ItemsSource="{Binding Jobs}" Margin="0,0,15,0">
									<ItemsControl.ItemTemplate>
										<DataTemplate x:DataType="model:BackupJob">
											<StackPanel Spacing="4" Margin="0,5">
												<StackPanel Orientation="Horizontal" Spacing="10">
													<TextBlock Foreground="#007ACC" FontWeight="Bold" Width="30">
														<TextBlock.Text>
															<MultiBinding Converter="{StaticResource ItemIndexConverter}">
																<Binding Path="ItemsSource" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
																<Binding />
															</MultiBinding>
														</TextBlock.Text>
													</TextBlock>
													<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
													<Border Background="#007ACC" CornerRadius="3" Padding="5,2">
														<TextBlock Text="{Binding Type, Converter={StaticResource BackupTypeConverter}}" FontSize="10" Foreground="White"/>
													</Border>
												</StackPanel>
												<Grid ColumnDefinitions="*,Auto" Margin="35,2,10,0">
													<ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding Progress}" Height="14" Foreground="#007ACC" CornerRadius="3"/>
													<TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
												</Grid>
											</StackPanel>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</ScrollViewer>
						</Border>

						<StackPanel Spacing="8">
							<TextBlock Text="{Binding TextEnterNumbersSemicolon}"
									   Foreground="#CCCCCC"
									   FontSize="12"/>
							<TextBox Watermark="Ex: 1;3;5"
									 Text="{Binding SelectedIndicesText}"
									 Width="250"
									 Height="36"
									 HorizontalAlignment="Left"/>
						</StackPanel>

						<StackPanel Orientation="Horizontal" Spacing="8">
							<Button Content="&#9654;" Background="#2EA043" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
									Command="{Binding PlaySelectionJobsCommand}"/>
							<Button Content="&#10074;&#10074;" Background="#D29922" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
									Command="{Binding PauseAllJobsCommand}"/>
							<Button Content="&#9632;" Background="#D13438" Foreground="White" Padding="8,4" CornerRadius="3" FontSize="12"
									Command="{Binding StopAllJobsCommand}"/>
						</StackPanel>

						<Border Background="#2D2D30" CornerRadius="6" Padding="12" BorderBrush="#3F3F46" BorderThickness="1">
							<StackPanel Spacing="6">
								<TextBlock Text="{Binding TextGlobalProgress}" Foreground="#CCCCCC" FontSize="12"/>
								<Grid ColumnDefinitions="*,Auto">
									<ProgressBar Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding GlobalProgress}" Height="14" Foreground="#4EC9B0" CornerRadius="3"/>
									<TextBlock Grid.Column="1" Text="{Binding GlobalProgress, StringFormat={}{0}%}" Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
								</Grid>
							</StackPanel>
						</Border>
					</StackPanel>

					<!-- ========== PAGE: Delete ========== -->
					<StackPanel IsVisible="{Binding IsDeletePage}" Spacing="15">
                        <TextBlock Text="{Binding TextDeleteJobs}"
                                   FontWeight="Bold"
                                   FontSize="22"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding TextSelectJobDelete}" Foreground="#CCCCCC" FontSize="13"/>

                        <ListBox ItemsSource="{Binding Jobs}"
                                 SelectedIndex="{Binding SelectedJobIndex}"
                                 MinHeight="200"
                                 MaxHeight="350">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="model:BackupJob">
                                    <StackPanel Spacing="5">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                            <Border Background="#007ACC" CornerRadius="3" Padding="5,2">
                                                <TextBlock Text="{Binding Type}" FontSize="10" Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Foreground="#888888" FontSize="11">
                                            <Run Text="Source:"/>
                                            <Run Text="{Binding SourceDir}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Border Background="#3D1F1F" CornerRadius="6" Padding="15" BorderBrush="#D13438" BorderThickness="1">
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding TextWarningTitle}" FontWeight="Bold" Foreground="#FFFFFF"/>
                                <TextBlock Text="{Binding TextWarningMsg}" TextWrapping="Wrap" Foreground="#CCCCCC" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Button Content="{Binding TextBtnDelete}"
                                Classes="danger"
                                Command="{Binding DeleteJobCommand}"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding HasJobSelected}"/>
                    </StackPanel>

					<!-- ========== PAGE: List Jobs ========== -->
					<StackPanel IsVisible="{Binding IsListJobsPage}" Spacing="15">
						<TextBlock Text="{Binding TextListJobs}"
								   FontWeight="Bold"
								   FontSize="22"
								   Foreground="#FFFFFF"
								   Margin="0,0,0,10"/>

						<Border Background="#2D2D30" CornerRadius="6" Padding="15" BorderBrush="#3F3F46" BorderThickness="1">
							<ItemsControl ItemsSource="{Binding Jobs}">
								<ItemsControl.ItemTemplate>
									<DataTemplate x:DataType="model:BackupJob">
										<StackPanel Spacing="5" Margin="0,8">
											<StackPanel Orientation="Horizontal" Spacing="10">
												<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
												<Border Background="#007ACC" CornerRadius="3" Padding="5,2">
													<TextBlock Text="{Binding Type, Converter={StaticResource BackupTypeConverter}}" FontSize="10" Foreground="White"/>
												</Border>
											</StackPanel>
											<StackPanel Orientation="Horizontal" Spacing="4">
												<TextBlock Text="{Binding $parent[Window].DataContext.TextLabelSource}" Foreground="#888888" FontSize="11"/>
												<TextBlock Text="{Binding SourceDir}" Foreground="#888888" FontSize="11"/>
											</StackPanel>
											<StackPanel Orientation="Horizontal" Spacing="4">
												<TextBlock Text="{Binding $parent[Window].DataContext.TextLabelTarget}" Foreground="#888888" FontSize="11"/>
												<TextBlock Text="{Binding TargetDir}" Foreground="#888888" FontSize="11"/>
											</StackPanel>
										</StackPanel>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</Border>
					</StackPanel>

				<!-- ========== PAGE: Settings ========== -->
					<StackPanel IsVisible="{Binding IsSettingsPage}" Spacing="15">
						<TextBlock Text="{Binding TextSettingsTitle}"
								   FontWeight="Bold"
								   FontSize="22"
								   Foreground="#FFFFFF"
								   Margin="0,0,0,10"/>

						<Border Background="#2D2D30" CornerRadius="6" Padding="20" BorderBrush="#3F3F46" BorderThickness="1">
							<StackPanel Spacing="20">

								<!-- CryptoSoft Path -->
								<StackPanel>
									<TextBlock Text="{Binding TextCryptoSoftPath}" 
											   Foreground="#CCCCCC" 
											   FontSize="12" 
											   Margin="0,0,0,5"/>
									<Grid ColumnDefinitions="*,Auto">
										<TextBox Grid.Column="0"
												Watermark="Ex: C:\CryptoSoft\CryptoSoft.exe"
												 Text="{Binding CryptoSoftPath}"
												 Height="36"/>
										<Button Grid.Column="1"
													Content="{Binding TextBrowse}"
													Click="SelectFolder"
													Tag="crypto"
													Classes="browse"
													Height="36"
													Padding="15,0"
													Margin="8,0,0,0"
													VerticalContentAlignment="Center"
													HorizontalContentAlignment="Center"/>
									</Grid>
								</StackPanel>

								<!-- Encryption Key -->
								<StackPanel>
									<TextBlock Text="{Binding TextEncryptionKey}" 
											   Foreground="#CCCCCC" 
											   FontSize="12" 
											   Margin="0,0,0,5"/>
									<TextBox Watermark="Ex: HonkHonk"
											 Text="{Binding EncryptionKey}"
											 Height="36"/>
								</StackPanel>

								<!-- Encrypted Extensions -->
								<StackPanel>
									<TextBlock Text="{Binding TextEncryptedExtensions}" 
											   Foreground="#CCCCCC" 
											   FontSize="12" 
											   Margin="0,0,0,5"
											   TextWrapping="Wrap"/>
									<TextBox Watermark="Ex: .txt;.doc;.pdf"
											 Text="{Binding EncryptedExtensions}"
											 Height="36"/>
								</StackPanel>

								<!-- Business Software Name -->
								<StackPanel>
									<TextBlock Text="{Binding TextBusinessSoftware}"
											   Foreground="#CCCCCC"
											   FontSize="12"
											   Margin="0,0,0,5"/>
									<TextBox Watermark="Ex: MyBusinessApp"
											 Text="{Binding BusinessSoftwareName}"
											 Height="36"/>
								</StackPanel>

								<!-- Large File Threshold -->
								<StackPanel>
									<TextBlock Text="{Binding TextMaxLargeFile}"
											   Foreground="#CCCCCC"
											   FontSize="12"
											   Margin="0,0,0,5"/>
									<TextBox Watermark="Ex: 1024 (0 = pas de limite)"
											 Text="{Binding MaxLargeFileSizeText}"
											 Height="36"/>
								</StackPanel>

                            <StackPanel Spacing="15">

                                <StackPanel>
                                    <TextBlock Text="{Binding TextLogMode}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding LogModes}"
                                              SelectedItem="{Binding SelectedLogMode}"
                                              Height="36"
                                              HorizontalAlignment="Stretch"/>
                                    <TextBlock Text="{Binding TextLogModeIndication}" Foreground="#808080" FontSize="10" Margin="0,5,0,0" />
                                </StackPanel>

                                <StackPanel IsVisible="{Binding SelectedLogMode, Converter={x:Static ObjectConverters.IsNotNull}}">
                                    <TextBlock Text="{Binding TextUrlLogServer}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
                                    <TextBox Watermark="Ex: http://192.168.1.100:5000/"
                                             Text="{Binding LogServerUrl}"
                                             Height="36"
                                             IsEnabled="{Binding SelectedLogMode, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                </StackPanel>

                                <Grid ColumnDefinitions="*,*">
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding TextMachineName}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding MachineName}"
                                                 Height="36"
                                                 IsReadOnly="True"
                                                 Background="#1E1E1E"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding TextUserName}" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding UserName}"
                                                 Height="36"
                                                 IsReadOnly="True"
                                                 Background="#1E1E1E"/>
                                    </StackPanel>
                                </Grid>

								<!-- Priority extensions -->
								<TextBlock Text="{Binding TextPriorityExtensions}" FontWeight="Bold" Margin="0,10,0,0"/>
								<TextBox Text="{Binding PriorityExtensions}" Watermark=".docx;.pdf;.xlsx"/>
								
								<!-- Save Button -->
								<Button Content="{Binding TextBtnSaveSettings}"
										Classes="primary"
										Command="{Binding SaveSettingsCommand}"
										HorizontalAlignment="Left"
										Margin="0,10,0,0"/>
							</StackPanel>
								</StackPanel>
						</Border>
					</StackPanel>

					<!-- Status message -->
					<TextBlock Text="{Binding StatusMessage}"
							   Foreground="#4EC9B0"
							   FontSize="14"
							   FontWeight="SemiBold"
							   Margin="0,10,0,0"
							   IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

				</StackPanel>

			</ScrollViewer>

		</Grid>
	</Grid>

</Window>
	